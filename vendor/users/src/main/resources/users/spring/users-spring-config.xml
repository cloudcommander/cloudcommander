<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <alias name="usersBoundedContext" alias="defaultUsersBoundedContext"/>
    <bean id="defaultUsersBoundedContext"
          class="com.cloudcommander.vendor.ddd.contexts.DefaultBoundedContextDefinition">
        <constructor-arg index="0" value="Users"/>
    </bean>

    <import resource="classpath:/users/spring/aggregates/users-aggregate-spring-config.xml" />

</beans>