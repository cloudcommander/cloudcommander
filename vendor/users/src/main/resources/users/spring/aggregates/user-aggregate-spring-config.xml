<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <alias name="userStateFactory" alias="defaultUserStateFactory"/>
    <bean id="defaultUserStateFactory"
          class="com.cloudcommander.vendor.users.ddd.aggregates.users.state.DefaultUserStateFactory"/>

    <alias name="userAggregateDefinition" alias="defaultUserAggregateDefinition"/>
    <bean id="defaultUserAggregateDefinition"
          class="com.cloudcommander.vendor.ddd.aggregates.DefaultAggregateDefinition">
        <constructor-arg index="0" ref="usersBoundedContext"/>
        <constructor-arg index="1" ref="userStateFactory"/>
        <constructor-arg index="2">
            <map/>
        </constructor-arg>
        <constructor-arg index="3">
            <map/>
        </constructor-arg>
    </bean>
</beans>