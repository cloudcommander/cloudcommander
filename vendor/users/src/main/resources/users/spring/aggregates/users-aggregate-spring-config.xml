<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <alias name="defaultUserStateFactory" alias="userStateFactory"/>
    <bean id="defaultUserStateFactory"
          class="com.cloudcommander.vendor.users.ddd.aggregates.users.state.DefaultUserStateFactory"/>

    <alias name="defaultUserAggregateDefinition" alias="userAggregateDefinition"/>
    <bean id="defaultUserAggregateDefinition"
          class="com.cloudcommander.vendor.ddd.aggregates.DefaultAggregateDefinition">
        <constructor-arg index="0" value="User"/>
        <constructor-arg index="1" ref="usersBoundedContext"/>
        <constructor-arg index="2" ref="userStateFactory"/>
        <constructor-arg index="3">
            <list/>
        </constructor-arg>
        <constructor-arg index="4">
            <list/>
        </constructor-arg>
        <constructor-arg index="5">
            <list/>
        </constructor-arg>
    </bean>

    <alias name="defaultUsersDddService" alias="usersDddService"/>
    <bean id="defaultUsersDddService" parent="dddService">
        <constructor-arg index="2" ref="userAggregateDefinition"/>
    </bean>

    <bean id="usersController" class="com.cloudcommander.vendor.users.controllers.UsersController"/>
</beans>