<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <alias name="defaultWarehouseAggregateConfig" alias="warehouseAggregateConfig"/>
    <bean id="defaultWarehouseAggregateConfig" parent="aggregateConfig">
        <constructor-arg value="com.cloudcommander.vendor.warehouses.aggregates.warehouse.WarehouseState"/>
        <constructor-arg>
            <map>
                <entry key="com.cloudcommander.vendor.warehouses.aggregates.warehouse.commands.CreateWarehouseCmd">
                    <ref bean="createWarehouseCmdHandler"/>
                </entry>
            </map>
        </constructor-arg>
        <constructor-arg>
            <map>
                <entry key="com.cloudcommander.vendor.warehouses.aggregates.warehouse.events.WarehouseCreatedEvt">
                    <ref bean="warehouseCreatedEvtHandler"/>
                </entry>
            </map>
        </constructor-arg>
    </bean>

    <alias name="defaultWarehouseStateFactory" alias="warehouseStateFactory"/>
    <bean id="defaultWarehouseStateFactory" class="com.cloudcommander.vendor.warehouses.aggregates.warehouse.factory.DefaultWarehouseStateFactory"/>


    <alias name="defaultCreateWarehouseCmdHandler" alias="createWarehouseCmdHandler"/>
    <bean id="defaultCreateWarehouseCmdHandler"
          class="com.cloudcommander.vendor.warehouses.aggregates.warehouse.commands.handlers.DefaultCreateWarehouseCmdHandler"/>

    <alias name="defaultWarehouseCreatedEvtHandler" alias="warehouseCreatedEvtHandler"/>
    <bean id="defaultWarehouseCreatedEvtHandler"
          class="com.cloudcommander.vendor.warehouses.aggregates.warehouse.events.handlers.DefaultWarehouseCreatedEvtHandler">
        <property name="warehouseStateFactory" ref="warehouseStateFactory"/>
    </bean>
</beans>