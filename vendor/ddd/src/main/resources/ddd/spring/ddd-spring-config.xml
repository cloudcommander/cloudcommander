<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <alias name="defaultDddActorSystem" alias="dddActorSystem"/>
    <bean id="defaultDddActorSystem"
        class="akka.actor.ActorSystem" factory-method="create">
        <constructor-arg value="cloud-commander"/>
    </bean>

    <alias name="defaultDddSupervisorActor" alias="dddSupervisorActor"/>
    <bean id="defaultDddSupervisorActor"
          factory-bean="dddActorSystem" factory-method="actorOf">
        <constructor-arg index="0">
            <bean class="akka.actor.Props" factory-method="create">
                <constructor-arg index="0">
                    <bean class="java.lang.Class" factory-method="forName">
                        <constructor-arg index="0" value="com.cloudcommander.vendor.ddd.akka.actors.DddSupervisorActor"/>
                    </bean>
                </constructor-arg>
                <constructor-arg index="1">
                    <list/>
                </constructor-arg>
            </bean>
        </constructor-arg>
        <constructor-arg index="1" value="ddd" type="java.lang.String"/>
    </bean>
</beans>