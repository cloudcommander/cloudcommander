<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <alias name="defaultDddActorSystem" alias="dddActorSystem"/>
    <bean id="defaultDddActorSystem"
        class="akka.actor.ActorSystem" factory-method="create">
        <constructor-arg value="cloud-commander"/>
    </bean>

    <alias name="defaultDddShardMessageExtractor" alias="dddShardMessageExtractor"/>
    <bean id="defaultDddShardMessageExtractor" class="com.cloudcommander.vendor.ddd.aggregates.clustering.DefaultDddMessageExtractor">
        <constructor-arg index="0" value="5"/>
    </bean>

    <alias name="defaultDddService" alias="dddService"/>
    <bean id="defaultDddService" abstract="true"
        class="com.cloudcommander.vendor.ddd.services.DefaultDddService"
    >
        <constructor-arg index="0" ref="dddActorSystem"/>
        <constructor-arg index="1" ref="dddShardMessageExtractor"/>
    </bean>
</beans>