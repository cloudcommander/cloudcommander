<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="aggregateConfig" abstract="true" class="com.cloudcommander.vendor.cqrs.aggregates.AggregateConfig"/>

    <alias name="defaultAggregateRegistry" alias="aggregateRegistry"/>
    <bean id="defaultAggregateRegistry" class="com.cloudcommander.vendor.cqrs.aggregates.registry.DefaultAggregateRegistry"/>

    <alias name="defaultCommandBusDispatcher" alias="commandBusDispatcher"/>
    <bean id="defaultCommandBusDispatcher" class="com.cloudcommander.vendor.cqrs.commands.bus.dispatchers.DefaultCommandBusDispatcher"/>

    <alias name="defaultCommandBusConsumer" alias="commandBusConsumer"/>
    <bean id="defaultCommandBusConsumer" class="com.cloudcommander.vendor.cqrs.commands.bus.consumers.DefaultCommandBusConsumer">
        <constructor-arg ref="commandBusDispatcher"/>
    </bean>
</beans>