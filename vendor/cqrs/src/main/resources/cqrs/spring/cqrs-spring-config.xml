<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="aggregateConfig" abstract="true" class="com.cloudcommander.vendor.cqrs.aggregates.AggregateConfig"/>

    <alias name="defaultAggregateRegistry" alias="aggregateRegistry"/>
    <bean id="defaultAggregateRegistry" class="com.cloudcommander.vendor.cqrs.aggregates.registry.DefaultAggregateRegistry"/>

    <bean id="defaultMessageBusDispatcher"
          abstract="true"
          class="com.cloudcommander.vendor.cqrs.bus.dispatchers.DefaultMessageBusDispatcher"/>

    <bean id="defaultMessageBusConsumer"
          abstract="true"
          class="com.cloudcommander.vendor.cqrs.bus.consumers.DefaultMessageBusConsumer"/>

    <alias name="defaultCommandBusDispatcher" alias="commandBusDispatcher"/>
    <bean id="defaultCommandBusDispatcher"
          class="com.cloudcommander.vendor.cqrs.commands.bus.dispatchers.DefaultCommandBusDispatcher"
          parent="defaultMessageBusDispatcher"/>

    <alias name="defaultCommandBusConsumer" alias="commandBusConsumer"/>
    <bean id="defaultCommandBusConsumer"
          class="com.cloudcommander.vendor.cqrs.commands.bus.consumers.DefaultCommandBusConsumer"
          parent="defaultMessageBusConsumer">
        <constructor-arg ref="commandBusDispatcher"/>
    </bean>

    <alias name="defaultEventBusDispatcher" alias="eventBusDispatcher"/>
    <bean id="defaultEventBusDispatcher"
          class="com.cloudcommander.vendor.cqrs.events.bus.dispachers.DefaultEventBusDispatcher"
          parent="defaultMessageBusDispatcher"/>

    <alias name="defaultEventBusConsumer" alias="eventBusConsumer"/>
    <bean id="defaultEventBusConsumer"
          class="com.cloudcommander.vendor.cqrs.events.bus.consumers.DefaultEventBusConsumer"
          parent="defaultMessageBusConsumer">
        <constructor-arg ref="eventBusDispatcher"/>
    </bean>

    <alias name="defaultCQRSWriteService" alias="CQRSWriteService"/>
    <bean id="defaultCQRSWriteService" class="com.cloudcommander.vendor.cqrs.services.DefaultCQRSWriteService">
        <property name="commandBusDispatcher" ref="commandBusDispatcher"/>
        <property name="uuidGenerationStrategy" ref="uuidGenerationStrategy"/>
    </bean>

    <alias name="defaultUuidGenerationStrategy" alias="uuidGenerationStrategy"/>
    <bean id="defaultUuidGenerationStrategy" class="com.cloudcommander.vendor.cqrs.services.strategies.DefaultUuidGenerationStrategy"/>
</beans>